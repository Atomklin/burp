{
    "configurations": [
        {
            "name": "Debug Bot",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/build/main.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "preLaunchTask": "${defaultBuildTask}",
            "runtimeArgs": [
                "-r",
                "dotenv/config"
            ]
        },
        {
            "name": "Debug Bot Test",
            "console": "integratedTerminal",
            "preLaunchTask": "${defaultBuildTask}",
            "request": "launch",
            "runtimeArgs": [
                "-r",
                "dotenv/config",
                "--test",
                "**/*.test.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
        },
    ]
}